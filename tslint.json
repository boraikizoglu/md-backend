{
    "extends": ["tslint:recommended"],
    "rules": {
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "prefer-for-of": false,
      "quotemark": [
        true,
        "single",
        "jsx-double"
      ],
      "no-reference": false,
      "max-line-length": [true, 400],
      "no-unused-variable": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false
        }
      ],
      "ban-types": false,
      "member-ordering": [
        true,
        {
          "order": [
            "static-field",
            "private-static-method"
          ]
        }
      ],
      "no-console": [
        false
      ],
      "no-debugger": false,
      "whitespace": [
        false,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
      ],
      "comma-dangle": ["error", {
          "arrays": "never",
          "objects": "never",
          "imports": "never",
          "exports": "never",
          "functions": "ignore"
      }],
      "one-line": [false, "check-catch", "check-finally", "check-else"]
  
    },
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts"
      ]
    }
  }
  